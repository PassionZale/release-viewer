model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  /// 昵称
  nickname String
  /// 头像
  avatar   String?
  /// 用户名
  username String    @unique
  /// 密码
  password String
  /// 角色
  role     Int       @default(3)
  /// 状态
  status   Int       @default(2)
  /// 发布记录
  releases Release[]

  @@index([username])
}
