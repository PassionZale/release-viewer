model Pipeline {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now()) @ignore
  updatedAt DateTime @updatedAt @ignore

  /// 流水线名称
  name          String
  /// 访问地址
  previewWebUrl String?
  /// 图片地址
  previewImgUrl String?
  /// 所属应用
  app           App?       @relation(fields: [appId], references: [id])
  appId         Int?
  /// 流水线
  releases      Release[]
}
